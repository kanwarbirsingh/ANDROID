<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
    <RelativeLayout 
        android:id="@+id/loginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <include layout="@layout/header_layout"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/loginTop">
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dip">
        
	    <EditText 
	        android:id="@+id/txtEmail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="Email"
	        android:textColorHint="@color/dark_gray"
	        android:textColor="@color/black_color"
	        android:background="@drawable/editbox_layout"
	        android:inputType="textEmailAddress"
	        android:padding="10dip"/>
	    	    
	    <EditText 
	        android:id="@+id/txtPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="Password"
	        android:textColorHint="@color/dark_gray"
	        android:background="@drawable/editbox_layout"
	        android:textColor="@color/black_color"
	        android:layout_marginTop="20dip"
	        android:layout_below="@+id/txtEmail"
	        android:inputType="textPassword"
	        android:padding="10dip"/>
	    
	    <Button 
	        android:id="@+id/btnLogin"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
            android:background="@drawable/btn_yellow"
            android:text="SIGN IN"
            android:textColor="@color/white_color"
            android:layout_below="@+id/txtPassword"
            android:layout_marginTop="20dip"/>
	    
	    <TextView 
	        android:id="@+id/txtLabelOR"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="OR"
	        android:textColor="#212121"
            android:layout_marginTop="20dip"
	        android:layout_below="@+id/btnLogin"/>
	    
	    <Button 
	        android:id="@+id/btnFacebookLogin"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:background="@drawable/fb_bg"
            android:text="SIGN IN WITH FACEBOOK"
            android:textColor="@color/white_color"
            android:gravity="center"
            android:layout_below="@+id/txtLabelOR"
            android:layout_marginTop="20dip"/>
	        
	    
	    <Button 
	        android:id="@+id/btnGoogleLogin"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:background="@drawable/googleplus_login"
            android:text="SIGN IN WITH GOOGLE +"
            android:textColor="@color/white_color"
            android:gravity="center"
            android:layout_below="@+id/btnFacebookLogin"
            android:layout_marginTop="20dip"/>
	    
	    <Button 
	        android:id="@+id/btnCreateAccount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="Don't Have An Account? Create One"
            android:layout_marginTop="20dip"
	        android:layout_below="@+id/btnGoogleLogin"
	        android:textColor="#212121"
	        android:background="@android:color/transparent"/>
	    
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
