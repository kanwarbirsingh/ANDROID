<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/policies_bg"
       
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/AlertMsgTextView"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
         	android:clickable="true"
         	 android:fontFamily="helvetica neue"
            android:gravity="center"
            android:text="GRAB IT"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="vertical" >
<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/txtlblrestname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurent Name :"
                android:textColor="@color/header_bg" />

				<TextView
				    android:id="@+id/txtrestname"
				    android:layout_width="100dp"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_toRightOf="@+id/txtlblcoupancode"
				    android:text="RestName**"
				    android:textColor="#000000" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/txtlblcoupancode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupan Code :       "
                android:textColor="@color/header_bg" />

				<TextView
				    android:id="@+id/txtcoupancode"
				    android:layout_width="100dp"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_toRightOf="@+id/txtlblcoupancode"
				    android:text="Coupan Code"
				    android:textColor="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
             >

            <TextView
                android:id="@+id/txtlbloffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              	android:textColor="@color/header_bg"
              	android:text="Offers                     :" />
 
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

 			<TextView
 			    android:id="@+id/txtofferinrs"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:text="â‚¹  "
 			    android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txtofferamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txtofferinpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" %"
                        android:textColor="#000000" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btnGrabit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_yellow"
                android:gravity="center"
                android:text="GRAB"
                android:textColor="@color/white_color"
                android:textSize="16dip" />

		<ImageView
		    android:id="@+id/imgdel"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_alignRight="@+id/btnDeleted"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="5dp"
		    android:visibility="gone"
		    android:src="@drawable/accept" />

        </RelativeLayout>
       

<Button
    android:id="@+id/btnPending"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="10dp"
      android:background="@drawable/btn_yellow"
            android:gravity="center"
            android:text="Pending"
            android:visibility="gone"
            android:textColor="@color/white_color"
            android:textSize="16dip"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>